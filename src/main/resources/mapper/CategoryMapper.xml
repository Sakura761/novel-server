<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sakura.novel.mapper.CategoryMapper">

    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.sakura.novel.entity.Category">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="parent_id" property="parentId" jdbcType="INTEGER"/>
        <result column="channel" property="channel" jdbcType="TINYINT"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!-- 基础字段 -->
    <sql id="Base_Column_List">
        id, name, parent_id, channel, create_time
    </sql>

    <!-- 插入分类 -->
    <insert id="insert" parameterType="com.sakura.novel.entity.Category" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO categories (name, parent_id, channel, create_time)
        VALUES (#{name}, #{parentId}, #{channel}, #{createTime})
    </insert>

    <!-- 根据ID删除分类 -->
    <delete id="deleteById" parameterType="INTEGER">
        DELETE FROM categories WHERE id = #{id}
    </delete>

    <!-- 更新分类 -->
    <update id="updateById" parameterType="com.sakura.novel.entity.Category">
        UPDATE categories
        SET name = #{name},
            parent_id = #{parentId},
            channel = #{channel}
        WHERE id = #{id}
    </update>

    <!-- 根据ID查询分类 -->
    <select id="selectById" parameterType="INTEGER" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM categories
        WHERE id = #{id}
    </select>

    <!-- 查询所有分类 -->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM categories
        ORDER BY channel ASC, parent_id ASC, id ASC
    </select>

    <!-- 根据父级ID查询子分类 -->
    <select id="selectByParentId" parameterType="INTEGER" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM categories
        WHERE parent_id = #{parentId}
        ORDER BY channel ASC, id ASC
    </select>

    <!-- 根据名称查询分类 -->
    <select id="selectByName" parameterType="STRING" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM categories
        WHERE name = #{name}
    </select>

    <!-- 查询顶级分类（父级ID为空） -->
    <select id="selectTopCategories" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM categories
        WHERE parent_id IS NULL
        ORDER BY channel ASC, id ASC
    </select>

    <!-- 根据分类名模糊查询 -->
    <select id="selectByNameLike" parameterType="STRING" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM categories
        WHERE name LIKE CONCAT('%', #{name}, '%')
        ORDER BY channel ASC, id ASC
    </select>

    <!-- 统计分类总数 -->
    <select id="count" resultType="INTEGER">
        SELECT COUNT(*) FROM categories
    </select>

    <!-- 检查分类名是否存在 -->
    <select id="existsByName" parameterType="STRING" resultType="BOOLEAN">
        SELECT COUNT(*) > 0 FROM categories WHERE name = #{name}
    </select>

    <!-- 检查是否有子分类 -->
    <select id="hasChildren" parameterType="INTEGER" resultType="BOOLEAN">
        SELECT COUNT(*) > 0 FROM categories WHERE parent_id = #{parentId}
    </select>

    <!-- 根据频道查询分类 -->
    <select id="selectByChannel" parameterType="INTEGER" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM categories
        WHERE channel = #{channel}
        ORDER BY parent_id ASC, id ASC
    </select>

    <!-- 根据频道和父级ID查询子分类 -->
    <select id="selectByChannelAndParentId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM categories
        WHERE channel = #{channel} AND parent_id = #{parentId}
        ORDER BY id ASC
    </select>

    <!-- 根据频道查询顶级分类 -->
    <select id="selectTopCategoriesByChannel" parameterType="INTEGER" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM categories
        WHERE channel = #{channel} AND parent_id IS NULL
        ORDER BY id ASC
    </select>

    <!-- 根据频道和名称查询分类 -->
    <select id="selectByChannelAndName" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM categories
        WHERE channel = #{channel} AND name = #{name}
    </select>

    <!-- 检查在指定频道下分类名是否存在 -->
    <select id="existsByChannelAndName" resultType="BOOLEAN">
        SELECT COUNT(*) > 0 FROM categories WHERE channel = #{channel} AND name = #{name}
    </select>

</mapper>
